<UserControl x:Class="UI.Views.CreateEmployee"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UI.Views"
             mc:Ignorable="d">
    <Grid MinWidth="450" MinHeight="200" Background="White" Height="225">
        <Label Content="Create a new user" HorizontalAlignment="Left" Margin="19,-5,0,0" VerticalAlignment="Top" Width="181" FontSize="20" FontWeight="Bold" Height="36"/>
        <Label x:Name="lblEmail" Content="Email" HorizontalAlignment="Left" Margin="25,59,0,0" VerticalAlignment="Top" Width="40"/>
        <Label x:Name="lblPhoneNumber" Content="PhoneNumber" HorizontalAlignment="Left" Margin="25,85,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblTypeOfUser" Content="Type of user" HorizontalAlignment="Left" Margin="25,113,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblName" Content="Name" HorizontalAlignment="Left" Margin="25,32,0,0" VerticalAlignment="Top" Height="27" Width="42"/>
        <TextBox x:Name="txtBoxName" HorizontalAlignment="Left" Margin="123,37,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtBoxEmail" HorizontalAlignment="Left" Margin="123,63,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtBoxPhoneNumber" HorizontalAlignment="Left" Margin="123,89,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="CboxTypeOfUser" HorizontalAlignment="Left" Margin="123,115,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="CboxTypeOfUser_SelectionChanged"/>
        <Button x:Name="btnCreateUser" Content="Create" HorizontalAlignment="Left" Margin="196,195,0,0" VerticalAlignment="Top" Width="47" FontWeight="Bold" Background="#FF62A3FF" Click="btnCreateUser_Click"/>
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="123,195,0,0" VerticalAlignment="Top" FontWeight="Bold" Width="46" Click="btnCancel_Click"/>
        <Label x:Name="lblPassword" Content="Password" HorizontalAlignment="Left" Margin="25,138,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="pwdBoxPassword" HorizontalAlignment="Left" Margin="123,142,0,0" VerticalAlignment="Top" Width="120"/>

    </Grid>
</UserControl>